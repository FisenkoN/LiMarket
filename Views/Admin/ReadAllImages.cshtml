@model IEnumerable<LiMarket_V1._0._0.Models.Image>

@{
    ViewBag.Title = "ReadAllImages";
}

<h2>ReadAllImages</h2>
<p>
    @Html.ActionLink("Create New", "CreateImage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th></th>
       
        <th>
            @Html.DisplayNameFor(model => model.Alt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        <img src="@item.Url" alt="@item.Alt" width="150px"/>
    </td>
    
    <td>
        @Html.DisplayFor(modelItem => item.Alt)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditImage", new { id = item.Id }) |
        @Html.ActionLink("Details", "InfoImage", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeleteImage", new { id = item.Id })
    </td>
</tr>
}

</table>
